<Page x:Class="Academy.Pages.StudentP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Academy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentP">

    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Mystudent.Name}"></TextBox>
            <TextBox Text="{Binding Mystudent.Surname}"></TextBox>
            <TextBox></TextBox>
            <Button x:Name="SaveB" Click="SaveB_Click">Save</Button>
        </StackPanel>
    </Grid>
</Page>
